<div class="overview-list">
    <div class="overview-header">
        <h4>Hosts</h4>
        <hr />
        <div class="overview-header-filter">
        {{#if controller.filter}}
            <p><a href="#" {{action 'removeFilter'}}>Remove <strong>{{controller.filterName}}</strong> filter</a></p>
        {{/if}}
        </div>
    </div>
    <ul>
        {{#each host in content}}
            {{#linkTo 'host' host tagName="li"}}
                    {{#linkTo 'host' host}}
                    <h3 class="overview-item-header"> {{host.hostUrl}}</h3>
                     <dl>
                        <dt>Virtual Machines</dt>
                        <dd>{{host.vmsCount}}</dd>
                    </dl>
                {{/linkTo}}
            {{/linkTo}}
        {{/each}}

    </ul>
</div>