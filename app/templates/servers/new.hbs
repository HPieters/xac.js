{{#if authFailed}}
    <p>Failed to authenticate with server</p>
{{/if}}

    <form>
        <fieldset>
            <ul class="createServerInput">
                <li>
                    <label for="hostUrl">Host Address:</label>
                    {{view App.HostUrlField viewName="hostUrl" id="hostUrl" placeholder="IP Address" valueBinding="hostUrl"}}
                </li>
                <li>
                    <label for="hostName">Host Username:</label>
                    {{view App.ValidateTextField viewName="hostName" id="hostName" placeholder="SSH Username" valueBinding="hostName" }}
                </li>
                <li>
                    <label for="hostPassword">Host Password:</label>
                    {{view App.ValidateTextField viewName="hostPassword" id="hostPassword" placeholder="SSH Password" valueBinding="hostPassword" }}
                </li>
                <li>
                    <!--{{#linkTo "servers.index" class="cancel" }} Cancel {{/linkTo}}-->
                    <input type="submit" name="submit" id="add-server" value="Add Server" {{action createServer }} />
                </li>
            </ul>
        </fieldset>
    </form>
