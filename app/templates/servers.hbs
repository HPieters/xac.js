{{#if view.hasHosts}}
<div class="overview-content">
    <div class="overview-list">
        <div class="overview-header">
            <h4>Servers</h4>
        </div>
        <ul>
            {{#each server in controller}}
                {{#linkTo "view.index" server tagName="li"}} {{#linkTo "view.index" server}}<h3 class="overview-item-header">{{server.hostUrl}}</h3>{{/linkTo}}{{/linkTo}}
            {{/each}}


        </ul>
    </div>

    {{outlet}}
</div>
{{else}}
    <div class="content-wrap">
       <div class="content-block warning">
        <span class="warning-icon"></span>
        <p>Please add a server before continuing.</p>
    </div>
    </div>
{{/if}}