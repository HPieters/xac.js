<div class="content-wrap">
    <h1>Dashboard</h1>

<div class="content-block warning">
        <span class="warning-icon"></span>
        <p>Running version {{buildVersion}} - XAC is still work in progress and under 'rapid' development - passwords are stored plain in local storage use with caution!</p>
    </div>


    <div class="dashboard-block-4">
        <div class="dashboard-block-content">
            <h3>Pools statistics</h3>
            <div class="dashboard-block-metrics">
                <div class="dashboard-block-metric">{{{pools}}}</div>
                <div class="dashboard-block-metric-unit">{{{poolsUnit}}}</div>
            </div>
        </div>
    </div>

    <div class="dashboard-block-4">
        <div class="dashboard-block-content">
            <h3>Hosts statistics</h3>
            <div class="dashboard-block-metrics">
                <div class="dashboard-block-metric">{{{hosts}}}</div>
                <div class="dashboard-block-metric-unit">{{{hostsUnit}}}</div>
            </div>
        </div>
    </div>

    <div class="dashboard-block-4">
        <div class="dashboard-block-content">
            <h3>Virtual Machines statistics</h3>
            <div class="dashboard-block-metrics">
                <div class="dashboard-block-metric">{{{vms}}}</div>
                <div class="dashboard-block-metric-unit">{{{vmsUnit}}}</div>
            </div>
        </div>
    </div>

    <div class="dashboard-block-4 last">
        <div class="dashboard-block-content">
            <h3>Notifications</h3>
            {{outlet "notifications"}}
        </div>
    </div>

</div>